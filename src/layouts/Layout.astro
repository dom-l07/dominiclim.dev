---
import { Navbar } from "../components/Navbar";
import '../styles/globals.css';

const siteTitle = "Dominic Lim | Software Developer & Student Portfolio";
const siteDescription = "Dominic Lim - Aspiring Software Engineer passionate about coding, problem-solving, and building innovative web applications. Explore my projects, skills in Python, TypeScript, React, and more.";
const siteUrl = "https://www.dominiclim.dev";
const siteImage = `${siteUrl}/photoOfMe.jpg`;
const keywords = "Dominic Lim, software developer, web developer, portfolio, Python, TypeScript, JavaScript, React, Astro, Singapore developer, student developer, full stack developer";
---

<!DOCTYPE html>
<html lang="en">
    <head>
        <meta charset="utf-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <meta name="generator" content={Astro.generator} />
        <meta name="robots" content="index, follow, max-snippet:-1, max-image-preview:large, max-video-preview:-1" />
        <meta name="googlebot" content="index, follow" />
        
        <!-- Primary Meta Tags -->
        <title>{siteTitle}</title>
        <meta name="title" content={siteTitle} />
        <meta name="description" content={siteDescription} />
        <meta name="keywords" content={keywords} />
        <meta name="author" content="Dominic Lim" />
        <meta name="theme-color" content="#3B82F6" />
        
        <!-- Favicon -->
        <link rel="icon" type="image/svg+xml" href="/domLogo.svg" />
        <link rel="apple-touch-icon" href="/domLogo.svg" />
        
        <!-- Canonical URL -->
        <link rel="canonical" href={siteUrl} />
        
        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={siteUrl} />
        <meta property="og:title" content={siteTitle} />
        <meta property="og:description" content={siteDescription} />
        <meta property="og:image" content={siteImage} />
        <meta property="og:image:alt" content="Dominic Lim - Software Developer" />
        <meta property="og:site_name" content="Dominic Lim Portfolio" />
        <meta property="og:locale" content="en_US" />

        <!-- Twitter -->
        <meta name="twitter:card" content="summary_large_image" />
        <meta name="twitter:url" content={siteUrl} />
        <meta name="twitter:title" content={siteTitle} />
        <meta name="twitter:description" content={siteDescription} />
        <meta name="twitter:image" content={siteImage} />
        <meta name="twitter:image:alt" content="Dominic Lim - Software Developer" />

        <!-- Structured Data - Person -->
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "Person",
          "@id": "https://www.dominiclim.dev/#person",
          "name": "Dominic Lim",
          "givenName": "Dominic",
          "familyName": "Lim",
          "url": "https://www.dominiclim.dev",
          "image": "https://www.dominiclim.dev/photoOfMe.jpg",
          "description": "Aspiring Software Engineer passionate about coding, problem-solving, and building innovative web applications.",
          "jobTitle": "Aspiring Software Engineer",
          "knowsAbout": ["Python", "TypeScript", "JavaScript", "React", "Astro", "Web Development", "Software Development"],
          "sameAs": [
            "https://github.com/dom-l07",
            "https://www.linkedin.com/in/domljl"
          ],
          "email": "mailto:domljl07@gmail.com"
        }
        </script>

        <!-- Structured Data - WebSite -->
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "WebSite",
          "@id": "https://www.dominiclim.dev/#website",
          "url": "https://www.dominiclim.dev",
          "name": "Dominic Lim Portfolio",
          "description": "Personal portfolio website of Dominic Lim - Aspiring Software Engineer",
          "publisher": {
            "@id": "https://www.dominiclim.dev/#person"
          },
          "inLanguage": "en-US"
        }
        </script>

        <!-- Structured Data - WebPage -->
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "WebPage",
          "@id": "https://www.dominiclim.dev/#webpage",
          "url": "https://www.dominiclim.dev",
          "name": "Dominic Lim | Software Developer & Student Portfolio",
          "description": "Explore Dominic Lim's portfolio featuring projects, skills, certifications, and contact information.",
          "isPartOf": {
            "@id": "https://www.dominiclim.dev/#website"
          },
          "about": {
            "@id": "https://www.dominiclim.dev/#person"
          },
          "mainEntity": {
            "@id": "https://www.dominiclim.dev/#person"
          },
          "inLanguage": "en-US"
        }
        </script>

        <!-- Structured Data - BreadcrumbList -->
        <script type="application/ld+json">
        {
          "@context": "https://schema.org",
          "@type": "BreadcrumbList",
          "itemListElement": [
            {
              "@type": "ListItem",
              "position": 1,
              "name": "Home",
              "item": "https://www.dominiclim.dev"
            }
          ]
        }
        </script>
    </head>
    <body class="text-gray-900 dark:text-white font-poppins">
        <Navbar client:load />

        <main class="pt-16 sm:pt-20">
            <slot />
        </main>
    </body>
</html>